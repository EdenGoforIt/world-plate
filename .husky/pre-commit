#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged on staged files (fast staged-only linting + formatting)
echo "Running lint-staged (pre-commit)..."
npx lint-staged
RC=$?
if [ $RC -ne 0 ]; then
  echo "lint-staged failed. Commit aborted. Fix issues and try again."
  exit $RC
fi
echo "lint-staged passed. Proceeding with commit."
